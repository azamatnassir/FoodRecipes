<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodrecipes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityRecipes"
            android:parentActivityName=".MainScreenActivity"/>
        <activity
            android:name=".ActivitySupport"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivityFastfood"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivityDesserts"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivityDrinks"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivityBaking"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivitySalad"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivitySecondCourse"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".ActivitySoup"
            android:parentActivityName=".MainScreenActivity" />
        <activity
            android:name=".MainScreenActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>